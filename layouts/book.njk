---
layout: base.njk
---

<div id="content" class="book">
  <h1>{{ title }}</h1>

  <div class="summary">
    {{ content | safe }}

    <ul class="buy-links">
      <li>Découvre le premier chapitre gratuitement <a href="{{ pdfLink | url }}">PDF</a> <a href="{{ audioLink | url }}">Audio</a></li>
      <li><a href="{{ amazonLink | url }}">Achète la version papier sur Amazon.fr</a></li>
      <li><a href="{{ bodLink | url }}">Achète la version digital sur BoD.fr</a></li>
    </ul>
  </div>

  <picture>
    <source type="image/avif" srcset="/img/{{ cover | url }}.avif">
    <source type="image/webp" srcset="/img/{{ cover | url }}.webp">
    <img src="/img/{{ cover | url }}.png" alt="" loading="lazy">
  </picture>
</div>

<blockquote id="excerpt">
  <p>{{ quote | typeset }}</p>
</blockquote>

<section id="testimonials">
  {% for testimonial in testimonials %}
  <blockquote>
    {{ testimonial.quote | typeset }}
    <address>{{ testimonial.name }}</address>
  </blockquote>
  {% endfor %}
</section>

<section id="about">
  <img src="/img/paul-valensier.jpg" alt="Paul le fumeur de pipe" loading="lazy">
  <p>{{ apropos | typeset }}</p>
</section>